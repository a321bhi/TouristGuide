<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.touristguide.HomePage">
<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#90C3D4"
   >

    <TextView
        android:id="@+id/intro"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Tourist Guide!"
        android:layout_centerHorizontal="true"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro"
        android:text="History"
        android:textSize="20dp"
        android:background="#36E359"
        android:id="@+id/histbutton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro"
        android:text="Profile"
        android:textSize="20dp"
        android:background="#36E359"
        android:id="@+id/probutton"
        android:layout_alignParentRight="true"
        />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20dp"
      android:text="By Interest"
      android:id="@+id/s1"
      android:onClick="interest"
      android:layout_marginTop="75dp"
      android:layout_below="@id/probutton"
      android:background="#36E359"
      android:layout_centerHorizontal="true"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="By Location"
        android:id="@+id/s2"
        android:layout_below="@id/s1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="#36E359"
        android:onClick="openmap"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/s2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/search"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/search"
        android:onClick="openmap"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/search_button"/>

</RelativeLayout>
</ScrollView>