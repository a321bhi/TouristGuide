<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.touristguide.RegisterPage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#90C3D4">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="20dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_centerHorizontal="true"
        android:id="@+id/head1"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@id/head1"
        android:layout_marginTop="30dp"
        android:id="@+id/name"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/head1"
        android:layout_toRightOf="@id/name"
        android:id="@+id/nameinput" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:layout_below="@id/name"
        android:layout_marginTop="30dp"
        android:id="@+id/mob"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/mob"
        android:id="@+id/mobinput" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Email-ID"
        android:layout_marginTop="30dp"
        android:layout_below="@id/mob"
        android:id="@+id/email"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@id/mob"
        android:layout_toRightOf="@id/email"
        android:id="@+id/emailinput" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="D.O.B."
        android:layout_marginTop="30dp"
        android:layout_below="@id/email"
        android:id="@+id/dob"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_below="@id/email"
        android:layout_toRightOf="@id/dob"
        android:id="@+id/dobinput" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="30dp"
        android:layout_below="@id/dob"
        android:id="@+id/uname"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/dob"
        android:layout_toRightOf="@id/uname"
        android:id="@+id/unameinput" />
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="30dp"
        android:layout_below="@id/uname"
        android:id="@+id/pass"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:layout_below="@id/uname"
        android:layout_toRightOf="@id/pass"
        android:id="@+id/passinput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/passinput"
        android:layout_marginTop="40dp"
        android:onClick="reg"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
</ScrollView>